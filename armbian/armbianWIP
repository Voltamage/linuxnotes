sudo apt-get update && sudo apt-get dist-upgrade && sudo apt-get install curl git needrestart zsh && sudo needrestart
sh -c "$(curl -fsSL https://raw.github.com/ohmyzsh/ohmyzsh/master/tools/install.sh)" && exec zsh
mkdir ~/scripts && sed -i.bak -e '/PATH=$HOME/ a export PATH=$HOME/scripts:$PATH' ~/.zshrc && exec zsh
sed -i.bak -e '/ZSH_THEME="/c\ZSH_THEME="powerlevel10k/powerlevel10k"' -e '/DISABLE_UPDATE_PROMPT/c\DISABLE_UPDATE_PROMPT="true"' -e '/UPDATE_ZSH_DAYS/c\export UPDATE_ZSH_DAYS=1' -e '/plugins=/c\plugins=(git zsh-autosuggestions)' ~/.zshrc
